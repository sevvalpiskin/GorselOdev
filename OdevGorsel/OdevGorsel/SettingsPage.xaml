<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="OdevGorsel.SettingsPage"
             Title="Ayarlar">
    <StackLayout Padding="20">
        <Grid ColumnDefinitions="*, Auto" Padding="10">
            
            <Label Text="Koyu Tema" FontSize="18" VerticalTextAlignment="Center" />

            
            <Switch x:Name="DarkModeSwitch" Grid.Column="1" Toggled="OnDarkModeToggled" />
        </Grid>
    </StackLayout>
</ContentPage>
